---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Agency Hero Builder">
  <main className="min-h-screen bg-slate-50 py-12 px-4 sm:px-6 lg:px-8">
    <div className="max-w-4xl mx-auto">
      <h1 className="text-3xl font-bold text-slate-900 mb-8 text-center">Agency Hero Builder</h1>
      
      <div className="space-y-12">
        <section>
          <h2 className="text-xl font-semibold text-slate-700 mb-4 border-b border-slate-200 pb-2">Master Templates</h2>
          <div className="grid grid-cols-1 sm:grid-cols-3 gap-4">
            <a href="/templates/1-infographic" className="block p-6 bg-white rounded-xl shadow-sm hover:shadow-md transition-shadow ring-1 ring-slate-200">
              <h3 className="font-bold text-slate-900 mb-1">Template 1</h3>
              <p className="text-sm text-slate-500">The Infographic SaaS Layout</p>
            </a>
            <a href="/templates/2-lead-capture" className="block p-6 bg-white rounded-xl shadow-sm hover:shadow-md transition-shadow ring-1 ring-slate-200">
              <h3 className="font-bold text-slate-900 mb-1">Template 2</h3>
              <p className="text-sm text-slate-500">The High-Intent Lead Capture</p>
            </a>
            <a href="/templates/3-authority-vsl" className="block p-6 bg-white rounded-xl shadow-sm hover:shadow-md transition-shadow ring-1 ring-slate-200">
              <h3 className="font-bold text-slate-900 mb-1">Template 3</h3>
              <p className="text-sm text-slate-500">The Authority VSL Layout</p>
            </a>
          </div>
        </section>

        <section>
          <h2 className="text-xl font-semibold text-slate-700 mb-4 border-b border-slate-200 pb-2">Client Projects</h2>
          <div className="grid grid-cols-1 sm:grid-cols-3 gap-4">
            <a href="/clients/smile-institute" className="block p-6 bg-white rounded-xl shadow-sm border-l-4 border-[#154a52] hover:shadow-md transition-shadow ring-1 ring-slate-200">
              <h3 className="font-bold text-slate-900 mb-1">Smile Institute</h3>
              <p className="text-sm text-slate-500">Premium Dental Clinic</p>
            </a>
            {/* Future clients will go here */}
          </div>
        </section>
      </div>
    </div>
  </main>
</Layout>
