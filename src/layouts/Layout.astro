---
interface Props {
	title: string;
}

const { title } = Astro.props;
import '../styles/global.css';
---

<!doctype html>
<html lang="hu" className="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Smile Institute® | Prémium fogászat és szájsebészet Budapesten" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="antialiased text-slate-800 bg-white selection:bg-[#154a52]/20 selection:text-[#154a52]">
		<slot />
	</body>
</html>
