---
interface Props {
	title: string;
}

const { title } = Astro.props;
import '../styles/global.css';
---

<!doctype html>
<html lang="en" className="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Authority VSL Template" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="antialiased text-zinc-300 bg-zinc-950 min-h-screen selection:bg-emerald-500/30 selection:text-emerald-100">
		<slot />
	</body>
</html>
